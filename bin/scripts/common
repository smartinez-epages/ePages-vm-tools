#!/bin/bash

#======================================================================================================================
# log
#======================================================================================================================
function log() {
  [ "${VERBOSE}" != 0 ] && echo "$*"
}

#======================================================================================================================
# error
#======================================================================================================================
function error() {
  echo -e "\nERROR: $*"
}

#======================================================================================================================
# showHelp
#======================================================================================================================
function showHelp() {
  DATA_SEGMENT=$( grep -n '^<<< DATA >>>$' ${SCRIPT} | cut -d : -f 1 )
  DATA_SEGMENT=$((${DATA_SEGMENT}+1))
  tail -n +$DATA_SEGMENT ${SCRIPT} |
    sed -r -e "s/@@NAME@@/${NAME}/g" -e "s/@@VERSION@@/${VERSION}/g"

  exit 1
}

